/**index.wxss**/
.index{
  width: 100%;
  padding: 90rpx 20rpx 0 20rpx;
  background: #F3F3F3;
  position: relative;
}
.app{
  width: 182rpx;
  height: 60rpx;
  border-radius: 40rpx;
  background: #00B248;
  font-size: 29rpx;
  color:#fff;
  padding-left:30rpx;
  line-height: 60rpx;
  position: absolute;
  right:-10rpx;
  top:20rpx;
  z-index:10;
}
.details{
  width:675rpx;
  background:#fff;
  padding:20rpx 20rpx;
  border-radius: 15rpx;
}
.title{
  position: relative; 
  margin-bottom: 48rpx;
}
.details .img{
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  background:#00B248;
}
.details .name{
  font-size: 24rpx;
  position: absolute;
  top:0rpx;
  left:75rpx;
}
.text{
  position: absolute;
  top:30rpx;
  left: 75rpx;
}
.text image{
  width: 570rpx;
  height: 32rpx;
}
.commodity{
  width: 640rpx;
  height: 185rpx;
  border-radius: 20rpx;
  margin:0 auto;
  display: flex;
  background:#F3F3F3;
  padding:10rpx 10rpx;
}
.commodity image{
  width: 182rpx;
  height: 182rpx;
}
.commodityName{
  width: 446rpx;
  font-size: 28rpx;
  font-weight: 580;
  margin-left:30rpx;
  position: relative;
  top:-35rpx;
}
.jindu{
  width: 610rpx;
  margin:0 auto;
  margin-top:100rpx;
  position: relative;
}
.jindu .price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color:#666666;
  font-size: 22rpx;
  margin-top:10rpx;
}
.jindu .payed{
  /* color:#fff; */
  font-size: 22rpx;
  position: absolute;
  top:0rpx;
  left:24%;
  color:#fff;
}
.jindu .dajindu{
  width: 100%;
  height: 30rpx;
  background:#CBF3DB;
  border-radius:50rpx;
}
.jindu .xiaojindu{
  width: 30%;
  height: 30rpx;
  background:#09BB07;
  border-radius:50rpx;
  position: absolute;
  top:0rpx;
}
.btn{
  width: 620rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 50rpx;
  background: #09BB07;
  color:#fff;
  text-align: center;
  margin:25rpx auto;
}
.people{
  width:675rpx;
  margin-top:27rpx;
  padding:20rpx 20rpx;
  background:#fff;
  border-radius: 15rpx;
}
.num{
  color:#666666;
  font-size: 24rpx;
}
.peopleDetail{
  width: 654rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#666666;
  margin-top:23rpx;
}
.msg{
  width: 50%;
  display: flex;
  line-height: 57rpx;
}
.left image{
  width: 57rpx;
  height: 57rpx;
  border:1px solid red;
  border-radius: 50%;
}
.right{
  flex-direction: row-reverse
}
.right image{
  width: 50rpx;
  height: 30rpx;
  margin-top:15rpx;
}
.pepoleName{
  margin-left:15rpx;
}
.mark{
  position: fixed;
  top:0px;
  width: 100%;
  height: 100%;
  background:#000;
  z-index: 15;
  opacity: 0.5;
  display: flex;
  justify-content:center;
  align-items:Center;
}
.success{
  width: 672rpx;
  height: 672rpx;
  background:#fff;
  position: absolute;
  top:50%;
  left:50%;
  margin-left:-336rpx;
  margin-top:-336rpx;
  text-align: center;
  z-index: 100;
}
.success .headIme{
  display: block;
  width:70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin:10rpx auto;
  border:1px solid red;
}
.success .text1{
  width: 368rpx;
  height: 40rpx;
  margin:0 auto;
}
.success .text2{
  font-size: 30rpx;
  font-weight: 700;
  margin:20rpx 0;
}
.tuijian{
  width: 632rpx;
  height: 200rpx;
  margin:0 auto;
  display: flex;
  justify-content: space-between;
}
.titem{
  width: 140rpx;
  height: 155rpx;
  border:1px solid red;
  padding-top:35rpx;
  color:#ff7e00;
  font-size: 20rpx;
}
.titem image{
  display: block;
  margin:0 auto;
  margin-bottom: 25rpx;
  width:90rpx;
  height: 80rpx;
  border:1px solid red;
}
.titem .text3{
  margin-right:10rpx;
  font-size: 30rpx;
  font-weight: 680;
}
.helpPay{
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color:#fff;
  margin:0 auto;
  background:#00B248;
  border-radius:50rpx;
  margin-top:40rpx;
}
.close{
  font-size: 26rpx;
  margin-top:35rpx;
  color:#666666;
}